<root>

	<windowclass name="charsheet_main">
		<margins control="0,0,0,5" />
		<sheetdata>
			<!-- IDENTITE -->
			<!--
				Branche de la DB : charsheet.ID-XXXXX.identite.
			-->
			
			<!-- Frame de placement -->
			<frame_char name="identite_frame">
				<bounds>15,0,-29,100</bounds>
			</frame_char>
				
			<!-- RACE -->
			<label>
				<anchored to="identite_frame" position="insidetopleft" offset="15,15" />
				<static textres="char_label_race" />
			</label>
			<combobox name="race" source="identite.race">
				<anchored to="identite_frame" position="insidetopleft" offset="100,15" width="100" height="20" />
				<listdirection>down</listdirection>
				<script>
					function onInit()
						super.onInit();
						add("Human", list_race_human);
						add("Elve", list_race_elf);
						add("Dwarf", list_race_dwarf);
						add("Witcher", list_race_witcher);
						add("Mage", list_race_mage);
					end
				</script>
				<default>Human</default>
			</combobox>
		
			<!-- HOME COUNTRY -->
			<label>
				<anchored to="race" position="right" offset="15,0" />
				<static textres="char_label_home_country" />
			</label>
			<stringu name="home_country" source="identite.home_country">
				<anchored to="identite_frame">
					<top offset="15" />
					<left offset="320" />
					<right offset="-20" />
					<size height="20" />
				</anchored>
			</stringu>

			<!-- GENDER -->
			<label>
				<anchored to="identite_frame" position="insidetopleft" offset="15,40" />
				<static textres="char_label_gender" />
			</label>
			<combobox name="gender" source="identite.gender">
				<anchored to="identite_frame" position="insidetopleft" offset="100,40" width="100" height="20" />
				<listdirection>down</listdirection>
				<script>
					function onInit()
						super.onInit();
						add("Female", list_race_female);
						add("Male", list_race_male);
					end
				</script>
				<default>Male</default>
			</combobox>
				
			<!-- AGE -->
			<label>
				<anchored to="gender" position="right" offset="15,0" />
				<static textres="char_label_age" />
			</label>
			<basicnumber name="age" source="identite.age">
				<anchored to="identite_frame" position="insidetopleft" offset="285,40" width="30" height="20" />
				
			</basicnumber>
	
			<!-- REPUTATION -->
			<label>
				<anchored to="age" position="right" offset="15,0" />
				<static textres="char_label_reputation" />
			</label>
			<basicnumber name="reputation" source="identite.reputation">
				<anchored to="identite_frame" position="insidetopleft" offset="425,40" width="30" height="20" />
				
			</basicnumber>
	
			<!-- PROFESSION -->
			<label>
				<anchored to="identite_frame" position="insidetopleft" offset="15,65" />
				<static textres="char_label_profession" />
			</label>
			<combobox name="profession" source="identite.profession">
				<anchored to="identite_frame" position="insidetopleft" offset="100,65" width="100" height="20" />
				<listdirection>down</listdirection>
				<script>
					function onInit()
						super.onInit();
						add("Bard", list_profession_bard);
						add("Craftsman", list_profession_craftsman);
						add("Criminal", list_profession_criminal);
						add("Doctor", list_profession_doctor);
						add("Mage", list_profession_mage);
						add("Man At Arms", list_profession_man_at_arms);
						add("Merchant", list_profession_merchant);
						add("Priest", list_profession_priest);
						add("Witcher", list_profession_witcher);
					end
				</script>
				<default>Bard</default>
			</combobox>

			<!-- IMPROVEMENT POINTS -->
			<label>
				<anchored to="profession" position="right" offset="130,0" />
				<static textres="char_label_improvement_point" />
			</label>
			<basicnumber name="improvement_point" source="identite.improvement_point">
					<anchored to="identite_frame" position="insidetopleft" offset="425,65" width="30" height="20" />
					
				</basicnumber>
		</sheetdata>
	</windowclass>

</root>
