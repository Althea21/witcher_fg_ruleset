		<margins control="0,0,0,2" />
		<sheetdata>
			<frame_char name="identite_frame">
				<bounds>15,0,-29,250</bounds>
			</frame_char>
			
			<label>
				<anchored to="identite_frame" position="insidetopleft" offset="15,15" />
				<static textres="char_label_race" />
			</label>
			<combobox name="race" source="identite.race">
				<anchored to="identite_frame" position="insidetopleft" offset="70,15" width="100" height="20" />
				<listdirection>down</listdirection>
				<script>
					function onInit()
						super.onInit();
						add("Human", list_race_human);
						add("Elve", list_race_elf);
						add("Dwarf", list_race_dwarf);
						add("Witcher", list_race_witcher);
						add("Mage", list_race_mage);
					end
				</script>
				<default>Human</default>
			</combobox>

			<label>
				<anchored to="identite_frame" position="insidetopleft" offset="15,35" />
				<static textres="char_label_gender" />
			</label>
			<combobox name="gender" source="identite.gender">
				<anchored to="identite_frame" position="insidetopleft" offset="70,35" width="100" height="20" />
				<listdirection>down</listdirection>
				<script>
					function onInit()
					super.onInit();
					add("Female", list_race_female);
					add("Male", list_race_male);
					end
				</script>
				<default>Male</default>
			</combobox>
			
			<label>
				<anchored to="race" position="right" offset="25,0" />
				<static textres="char_label_home_country" />
			</label>
			<stringu name="home_country" source="identite.home_country">
				<anchored to="identite_frame">
					<top offset="15" />
					<left offset="300" />
					<right offset="-20" />
					<size height="20" />
				</anchored>
			</stringu>
			
			
