<root>
	<!--label de frame-->
	<template name="frame_label">
		<label_frametop>
			
		</label_frametop>	
	</template>
	
	<!--stat de base-->
	<template name="number_charstatbase">
		<basicnumber>
			<hideonvalue value="0" />
		</basicnumber>
	</template>
	<!--stat modificateur-->
	<template name="number_charstatmodifier">
		<basicnumber>
			<hideonvalue value="0" />
		</basicnumber>
	</template>
	<!--stat total-->
	<template name="number_charstattotal">
		<basicnumber>
			<frame name="fieldlight" offset="7,5,7,5" />
			<hideonvalue value="0" />
			<disabled/> 
		</basicnumber>
	</template>
	<!--stat calculé-->
	<template name="number_derivedstat">
		<basicnumber>
			<frame name="fieldlight" offset="7,5,7,5" />
			<hideonvalue value="0" />
			<disabled/> 
		</basicnumber>
	</template>
	<!--stat calculé rollable-->
	<template name="number_derivedstat_rollable">
		<basicnumber>
			<frame name="fieldlight" offset="7,5,7,5" />
			<hideonvalue value="0" />
			<rollable />
			<readonly /> 
		</basicnumber>
	</template>
	<!--stat valeur courante-->
	<template name="number_statcurrentvalue">
		<basicnumber>
		</basicnumber>
	</template>

	<!-- List Skills -->
	<template name="list_skills">
		<windowlist>
			<script file="campaign/scripts/list_skills.lua" />
		</windowlist>
	</template>
	
	<!-- Dice -->
	<template name="dice_modifier">
		<basicdice>
			<script file="campaign/scripts/dice_modifier.lua" />
		</basicdice>
	</template>
	
	<!--Ammo counter-->
	<template name="state_charammocounter">
		<buttongroup_counter>
			<sourcefields>
				<maximum>maxammo</maximum>
				<current>ammo</current>
			</sourcefields>
		</buttongroup_counter>
	</template>
</root>
