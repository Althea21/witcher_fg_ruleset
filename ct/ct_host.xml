			<string_ctname_nonid name="nonid_name" />

			<sub_ct_section name="sub_targets" />
			<sub_ct_section name="sub_space" />
			<sub_ct_section name="sub_effects" />
			
			<!-- Targeting subsection -->
			<!-- <icon_ctsection_targeting name="targetingicon" />
