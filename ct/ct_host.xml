			<!-- Effect subsection -->
			<!-- <icon_ctsection_effect name="effecticon" />
			<list_ctsection_effect name="effects" />
			<button_ctsection_effect_iadd name="effects_iadd" />
			<frame_ctsection_effect name="frame_effects" /> -->

			<!-- Quick labels -->
